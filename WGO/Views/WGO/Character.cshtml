        {
            neckBonus += $"{(items.Neck.BonusLists.Count > 0 ? "&" : "")}ilvl={items.Neck.ItemLevel}";
        }

        // Waist
        waistBonus = items.Waist != null && items.Waist.BonusLists.Count > 0 ? $"bonus={string.Join(":", items.Waist.BonusLists)}" : string.Empty;

        // Shoulder
