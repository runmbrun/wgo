@using WGO.Models
@using MVCGrid.Web;

@model SearchViewModel
@{
    ViewBag.Title = "Raid";
}

<h2>Raid</h2>

@Html.MVCGrid("RaidRoster")
@Html.MVCGrid("RescanRaidRoster")

<button class="btn btn-default" id="reloadButton">Rescan Raid Roster</button>

@using (Html.BeginForm("Raid", "WGO"))
{
    <div class="row" style="padding-top:50px;">
        <div class="col-md-8">
            <section id="searchForm" class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.ValidationMessageFor(m => m.Character)
                <h4>Add a new character to the Raid Roster.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Realm, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Realm, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Realm, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Character, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Character, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Character, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        
                        <input type="button" value="Add" class="btn btn-default" onclick="location.href='@Url.Action("Raid", "WGO", new { characterName = "name", characterRealm = "realm" })'" />
                        <input type="submit" value="Add" />
                    </div>
                </div>
            </section>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $('#reloadButton').click(function () {
                $("#MVCGridContainer_RaidRoster").hide();
                MVCGrid.reloadGrid('RescanRaidRoster');
            });
        });
    </script>
}




